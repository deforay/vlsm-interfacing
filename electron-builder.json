{
  "productName": "Interfacing Tool",
  "appId": "com.deforay.vlsm-interfacing",
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": [
        "**/*"
      ]
    }
  ],
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "portable",
      "nsis"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "deb",
      "AppImage"
    ],
    "category": "Utility",
    "desktop": {
      "Name": "Interfacing Tool",
      "GenericName": "Laboratory Machine Interfacing Tool",
      "Comment": "Connect and receive results from testing instruments"
    }
  }
}
